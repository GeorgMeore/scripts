#!/bin/sh
# Make screenshot.

# file used for intermediate screenshot storage
tmpfile=~/.cache/screen.png

# default option values
area=select
save=toclip

# make a screenshot
screenshot() {
	rm -f "$tmpfile" # just in case
	case $area in
		full) maim "$tmpfile" ;;
		select) # make sure that touchpad is enabled
			tp=$(tp state)
			[ "$tp" = off ] && tp toggle
			maim -s "$tmpfile"
			[ "$tp" = off ] && tp toggle
	esac
}

# save image
imgaction() {
	[ -f "$tmpfile" ] || return # screenshot failed
	case $save in
		toclip) xclip -i -select clipboad -t image/png "$tmpfile" ;;
		tofile) cp "$tmpfile" "$HOME/$(date +'%d-%m-%y_%H:%M:%S').png" ;;
		open) sxiv "$tmpfile"
	esac
	rm "$tmpfile"
}

# parse options
while getopts ':Fof' opt; do
	case $opt in
		F) area=full ;;
		o) save=open ;;
		f) save=tofile ;;
		*)
			echo "usage: ${0##*/} [-Fof]"
			exit 1
	esac
done

# make a screenshot and do the thing
screenshot
imgaction
