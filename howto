#!/bin/sh
# View howtos

# file with howtos
howtofile=~/doc/notes/howto

# select topic
topic=$(
	grep -v '^	' "$howtofile"  |
	nl -nln |
	fzf --prompt 'How to> ' |
	cut -f1
)

# check if valid topic was selected
[ -n "$topic" ] || exit 1

# display relevant lines from the howto file
awk -v topic="$topic" '
!/^\t/ {
	topic_number++
	if (topic_number > topic)
		exit
}
/^\t/ {
	if (topic_number == topic)
		print substr($0, 2)
}' "$howtofile"
